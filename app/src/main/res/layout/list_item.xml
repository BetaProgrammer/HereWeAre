<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:background="#ff005e">

<RelativeLayout
        android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    >



    <TextView
        android:id="@id/EventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event name"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#000000"
        style="@style/Base.Theme.AppCompat"
        />

    <TextView
        android:id="@id/DateOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/EventName"
        android:text="Friday, 10 November 2017"
        android:textColor="#edf243"
        android:textColorHighlight="#0033ff"
        style="@style/Base.Theme.AppCompat"
        />

    <ImageView
        android:id="@id/EventPhoto"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@id/KnownPlace"
        style="@style/Base.Theme.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/DateOf"
        android:layout_toRightOf="@+id/DateOf"
        android:text="Venue"
        android:textColor="#30ef3d"
        android:textSize="15dp" />

</RelativeLayout>
</LinearLayout>
